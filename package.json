{
  "name": "asteroid-storm-online",
  "version": "1.0.0",
  "description": "Modern multiplayer Asteroids game with Three.js and WebSockets",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "build": "pnpm --filter shared build && pnpm --filter server build && pnpm --filter client build",
    "start": "pnpm --filter server start",
    "test": "pnpm --filter shared test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "quick-start": "./scripts/dev.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "game",
    "asteroids",
    "multiplayer",
    "websocket",
    "threejs",
    "typescript"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
